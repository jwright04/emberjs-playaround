<h1>Invitations</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>E-mail</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |invitation|}}
            <tr>
                <th>{{invitation.id}}</th>
                <td><a href="mailto:{{invitation.email}}">{{invitation.email}}</a></td>
                <td>
                    {{#link-to 'admin.invitations.edit' invitation.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
                    <button class="btn btn-danger btn-xs" {{action 'deleteInvite' invitation }}>Delete</button>
                </td>
            </tr>
        {{/each}}

    </tbody>
</table>